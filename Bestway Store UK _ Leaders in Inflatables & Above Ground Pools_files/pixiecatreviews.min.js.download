require(['jquery'],function($){window.reviewsProcessed=window.reviewsProcessed||[];var addReviewsToProducts=function(){if(window.reviewsArray){var reviewsData=window.reviewsArray;$('.trust-reviews').each(function(){var prodId=$(this).data('prod_id');if(!(window.reviewsProcessed.includes(prodId))&&(prodId in reviewsData)){window.reviewsProcessed.push(prodId);var review=reviewsData[prodId];if(review['reviewCount']!=='0'){var html='<div class="pm-trust-pilot-ave-wrap"><div class="pm-aggregate"><div class="stars-icons gold"></div>';html+='<div class="stars-awarded" style="width:'+review['percent']+'%"></div>';html+='</div></div>';html+='<div class="pm-aggregate-detail"><span>('+review['reviewCount']+')</span></div>';$(this).append(html);}}});}}
$('document').ready(function($){if(document.getElementById('amasty-shopby-product-list')!=null){var watcherId=document.getElementById('amasty-shopby-product-list');var observer=new MutationObserver(addReviewsToProducts);observer.observe(watcherId,{attributes:true,childList:true,subtree:true});}});$('body').on('click','.modes-mode.mode-grid, .modes-mode.mode-list',function(){window.reviewsProcessed=[];addReviewsToProducts;});});